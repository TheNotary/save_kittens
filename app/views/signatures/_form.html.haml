= form_for @signature do |f|
  - if @signature.errors.any?
    #error_explanation
      %h2= "#{pluralize(@signature.errors.count, "error")} prohibited this signature from being saved:"
      %ul
        - @signature.errors.full_messages.each do |msg|
          %li= msg

  .field.row
    .col-md-2
      = f.label :name
    .col-md-7
      = f.text_field :name, :class => "required"
  .field.row
    .col-md-2
      = f.label :email
    .col-md-7
      = f.text_field :email, :class => "required email"
  .field.row
    .col-md-2
      = f.label :zip
    .col-md-7
      = f.text_field :zip, :class => "required zipcodeUS"
  .field.row
    .col-md-1
      = f.check_box :subscriber
    .col-md-8
      = f.label "I want to subscribe to the Mailing List"

  .actions
    = f.submit 'Sign!'
